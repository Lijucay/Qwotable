<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Language and Theme"
        app:allowDividerBelow="true">
        <Preference
            android:title="Language"
            android:key="language"/>
        <Preference
            android:title="Colors"
            android:summary="Todo: Change name to current color theme"
            android:key="colors"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="App news"
        app:allowDividerBelow="true">
        <Preference
            android:title="Updater"
            android:key="updateCheck"
            android:summary="Check for newer versions of the application"/>
        <rikka.material.preference.MaterialSwitchPreference
            android:title="Beta"
            app:key="beta"
            android:summary="Get the latest updates, including beta versions"/>
        <Preference
            app:title="Changelogs"
            app:key="changelog"
            android:summary="See the changelog of previous changes"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Help me with this app"
        app:allowDividerBelow="true">
        <Preference
            android:title="Report a bug"
            android:summary="You found a bug? Send it to me!"
            android:key="reportBug"/>
        <Preference
            android:title="Suggest a feature"
            android:summary="You have a suggestion? Send it to me!"
            android:key="feature" />
        <Preference
            android:title="Share this app"
            android:summary="Share it with you friends and your friends' friends"
            android:key="share"/>
        <Preference
            android:title="Send feedback"
            android:summary="What is your opinion to this app? Go on and tell me!"
            android:key="feedback"/>
        <Preference
            android:title="Request a qwotable"
            android:summary="You have a quote or a wisdom that is not in this app?"
            android:key="qwrequest"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Privacy and Licenses"
        app:allowDividerBelow="true">
        <Preference
            android:title="Permissions of the app"
            android:summary="Find the App's permission here"
            android:key="permission"/>
        <Preference
            android:title="Your privacy"
            android:summary="I CARE ABOUT YOUR PRIVACY!!"
            android:key="policy"/>
        <Preference
            android:title="Licenses"
            android:summary="Licenses whut?"
            android:key="license" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Wiki"
        app:allowDividerBelow="true">
        <Preference
            android:title="Wiki"
            android:summary="This will lead you to the app's wiki"
            android:key="wiki"/>
    </PreferenceCategory>
</PreferenceScreen>
